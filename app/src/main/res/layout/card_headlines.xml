<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="24dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Headlines"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginBottom="8dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="8dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/headlines_category_chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">
                <!-- Chips will be added programmatically or statically -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="US"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technology"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_entertainment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entertainment"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                 <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                 <com.google.android.material.chip.Chip
                    android:id="@+id/chip_science"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Science"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                 <com.google.android.material.chip.Chip
                    android:id="@+id/chip_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>
                 <com.google.android.material.chip.Chip
                    android:id="@+id/chip_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="World"
                    style="@style/Widget.MaterialComponents.Chip.Choice"/>

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <ProgressBar
            android:id="@+id/headlines_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/headlines_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Could not load news."
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/headlines_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/item_headline" android:id="@+id/headline_1" android:visibility="gone"/>
            <include layout="@layout/item_headline" android:id="@+id/headline_2" android:visibility="gone"/>
            <include layout="@layout/item_headline" android:id="@+id/headline_3" android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
